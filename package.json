{
  "name": "ts-starter",
  "version": "0.0.4",
  "description": "A TypeScript starter template",
  "keywords": [
    "typescript",
    "starter",
    "template"
  ],
  "homepage": "https://github.com/shinlms404/ts-starter#readme",
  "bugs": "https://github.com/shinlms404/ts-starter/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinlms404/ts-starter.git"
  },
  "license": "MIT",
  "author": "Charlie Chan <shinlms404@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --format esm,cjs --clean --dts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "prepack": "nr build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && pnpm publish",
    "stub": "tsup --format esm",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "tsup --format esm,cjs --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "devDependencies": {
    "@shinlms404/eslint-config": "^0.0.18",
    "@shinlms404/prettier-config": "^0.1.0",
    "@types/node": "^20.11.26",
    "bumpp": "^9.3.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.9.0",
    "sucrase": "^3.35.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "eslint": "^8.56.0"
  },
  "packageManager": "pnpm@8.14.1",
  "publishConfig": {
    "access": "public"
  }
}
